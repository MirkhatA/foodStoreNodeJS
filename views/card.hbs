<section class="card-section">
    <div class="container">
        <h1>Card</h1>

        <div id="card">
            {{#if foods.length}}
                <table>
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Amount</th>
                        <th>Price</th>
                        <th>Actions</th>
                    </tr>
                    </thead>

                    <tbody>

                    {{#each foods}}
                        <tr>
                            <td>{{title}}</td>
                            <td>{{count}}</td>
                            <td class="price card-price">{{price}}</td>

                            <td>
                                <button
                                        class="btn btn-samll js-remove"
                                        data-id="{{id}}"
                                        data-csrf="{{@root.csrf}}"
                                >Delete
                                </button>
                            </td>
                        </tr>
                    {{/each}}

                    </tbody>
                </table>

                <p>
                    <strong>Price: </strong>
                <p class="price">{{price}}</p>
                </p>

                <form action="/orders" method="post">
                    <input type="hidden" name="_csrf" value="{{csrf}}">
                    <button type="submit" class="btn">Make Order</button>
                </form>
            {{else}}
                empty
            {{/if}}
        </div>
    </div>
</section>
