<h1>You order</h1>

{{#if orders.length}}
    {{#each orders}}
        <div class="row">
            <div class="col s6 offset-s3">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">
                            Order <small>{{_id}}</small>
                        </span>

                        <p class="date">Date: {{date}}</p>
                        <p><em>{{user.userId.name}}</em></p>
                        <p><em>({{user.userId.email}})</em></p>

                        <ol>
                            {{#each foods}}
                                <li>
                                    {{food.title}} (x<stong>{{count}}</stong>)
                                </li>
                            {{/each}}
                        </ol>

                        <hr>

                        <p>Price: <span class="price">{{price}}</span></p>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
{{else}}
    <p>empty(</p>
{{/if}}