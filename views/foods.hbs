<section class="foods">
    <div class="container">
        <h1>Menu</h1>

        <div class="row row-cols-1 row-cols-md-3 g-4">
            {{#if foods.length}}
                {{#each foods}}
                    <div class="col">
                        <div class="card card-div" style="border: none;">
                            <div class="card-image">
                                <a href="/foods/{{id}}"><img src="{{img}}" alt="{{title}}"></a>

                                <a class="btn-floating halfway-fab waves-effect waves-light red"><i style="font-size: 15px" class="material-icons">buy</i></a>
                            </div>

                            <div class="card-body">
                                <a href="/foods/{{id}}" class="card-title">{{title}}</a>
                                <p class="price">{{price}}</p>


                                <div class="card-action">

                                        {{#if @root.isAuth}}
                                            {{#ifeq userId._id @root.userId}}
                                            <a href="/foods/{{id}}/edit?allow=true">Edit</a>
                                            {{/ifeq}}
                                            <form action="/card/add" method="post">
                                                <input type="hidden" name="_csrf" value="{{@root.csrf}}">
                                                <input type="hidden" name="id" value="{{id}}">
                                                <button type="submit" class="btn btn-primary">buy</button>
                                            </form>

                                        {{/if}}
                                </div>
                            </div>
                        </div>
                    </div>
                {{/each}}
            {{else}}
                <p>Nothing here</p>
            {{/if}}
        </div>
    </div>
</section>
